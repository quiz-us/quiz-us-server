{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/teachers/sign_in": {
      "post": {
        "summary": "Signs teacher in",
        "tags": [
          "Teacher Sign In"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "teacher",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success: User signed in"
          },
          "401": {
            "description": "Unauthorized: invalid sign in credentials"
          }
        }
      }
    }
  }
}